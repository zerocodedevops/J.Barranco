rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} {
      // Permitir lectura a usuarios autenticados
      allow read: if request.auth != null;
      
      // Permitir escritura solo a admins (simplificado)
      // En un futuro, refinar para que empleados puedan subir fotos de trabajo
      allow write: if request.auth != null; 
    }
  }
}
